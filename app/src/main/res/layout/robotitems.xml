<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:duplicateParentState="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingBottom="3dip"
    android:paddingLeft="5dip">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:duplicateParentState="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingBottom="3dip"
        android:paddingLeft="5dip">
    <com.example.twilightlemon.lemonapp.CircleImageView
        app:border_width="2dp"
        app:border_color="#FAFAFA"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/icon"
        android:id="@+id/RTX"
        android:layout_alignTop="@+id/RNAME"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/RNAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/RTX"
        android:layout_toRightOf="@+id/RTX"
        android:text="小萌机器人"
        android:textColor="#AAAAAA" />

    <RelativeLayout
        android:id="@+id/RCT"
        android:background="@drawable/os"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RNAME"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/RTX"
        android:layout_toRightOf="@+id/RTX">

        <TextView
            android:id="@+id/RTEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="你好呀"
            android:textColor="#000" />
    </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:duplicateParentState="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingBottom="3dip"
        android:paddingLeft="5dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.example.twilightlemon.lemonapp.CircleImageView
            app:border_width="2dp"
            app:border_color="#FAFAFA"
            android:id="@+id/UTX"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/tx"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/UNAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/UTX"
            android:layout_toStartOf="@+id/UTX"
            android:text="小萌用户"
            android:textColor="#AAAAAA" />

        <RelativeLayout
            android:background="@drawable/o"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UNAME"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/UTX"
            android:layout_toStartOf="@+id/UTX">

            <TextView
                android:id="@+id/UTEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="测试"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>